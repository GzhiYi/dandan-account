<nav
  class="nav-instance"
  showIcons="{{['back', 'banner']}}"
  bind:showBanner="onShowBanner"
></nav>
<view class="category">
  <view wx:if="{{localCategory.length > 0}}" class="item" style="background: #4fd69c;">
    <view class="parent-name">
      常用分类
    </view>
    <view class="child-category">
      <view
        bindtap="selectCategory"
        data-category="{{child}}"
        class="child"
        wx:for="{{localCategory}}"
        wx:for-item="child"
        wx:key="{{child._id}}"
      >
        <view class="name">{{child.categoryName}}
          <image
            class="delete-icon"
            wx:if="{{child.openId !== 'SYSTEM' && isEdit}}"
            src="../../images/backspace-arrow.png"
            style="width: 28rpx;height: 28rpx;"
            catchtap="showMenu"
            data-category="{{child}}"
          ></image>
        </view>
      </view>
    </view>
  </view>
  <view class="item" wx:for="{{categoryList}}" wx:key="{{item._id}}">
    <view class="parent-name">
      {{item.categoryName}}
      <text wx:if="{{isEdit}}" class="add-icon" bindtap="showDialog" data-target="{{item}}">+</text>
    </view>
    <view class="child-category">
      <view
        bindtap="selectCategory"
        data-category="{{child}}"
        class="child"
        wx:for="{{item.children}}"
        wx:for-item="child"
        wx:key="{{child._id}}"
      >
        <view class="name">{{child.categoryName}}
          <image
            class="delete-icon"
            wx:if="{{child.openId !== 'SYSTEM' && isEdit}}"
            src="../../images/backspace-arrow.png"
            style="width: 28rpx;height: 28rpx;"
            catchtap="showMenu"
            data-category="{{child}}"
          ></image>
        </view>
      </view>
    </view>
  </view>
</view>
<view class="edit-mode" bindtap="changeEdit">
  <image src="../../images/{{isEdit ? 'cancel' : 'pencil'}}.png" class="edit-mode-img"></image>
</view>
<dialog visible="{{showAddDialog}}">
  <view slot="content">
    <view class="pop-indicator"></view>
    <view class="d-header">
      添加 {{addCategory.categoryName}} 子分类
    </view>
    <input
      value="{{addCategoryName}}"
      data-name="addCategoryName" 
      bindinput="bindInput"
      placeholder="输入子分类名"
      class="fill-cate"
      maxlength="10"
    ></input>
    
    <view class='list-item-btn' style="color: #4fd69c;" bindtap="confirmAddCategory" wx:if="{{!loadingAdd}}">确认</view>
    <view class='list-item-btn' style="color: #4fd69c;" wx:else>添加中...</view>
    <view class='list-item-btn' bindtap="closeDialog" style="border-bottom: none;">取消</view>
  </view>
</dialog>
<dialog visible="{{showMenuDialog}}" bind:closeDialog="closeDialog">
  <view slot="content">
    <view class="pop-indicator"></view>
    <view class="d-header">
      <text>删除分类：{{editItem.description || editItem.category.categoryName}}?</text>
      <view class="dialog-tip">原分类下的账单分类将变为杂项。</view>
    </view>
    <view class='list-item-btn' style="color: #f75676;" bindtap="deleteCategory" wx:if="{{!loadingDelete}}">
    {{showConfirmDelete ? '再次点击确认删除' : '删除'}}
    </view>
    <view class='list-item-btn' style="color: #f75676;" wx:else>
      删除中...
    </view>
    <view class='list-item-btn' bindtap="closeDialog" style="border-bottom: none;">取消</view>
  </view>
</dialog>
<dialog visible="{{showBannerDialog}}"  bind:closeDialog="closeDialog">
  <view slot="content">
    <view class="pop-indicator"></view>
    <view class="d-header">
      设置Banner语句
    </view>
    <input
      value="{{word}}"
      data-name="word" 
      bindinput="bindInput"
      placeholder="输入语句"
      class="fill-cate"
    ></input>
    
    <view class='list-item-btn' style="color: #4fd69c;" bindtap="confirmUpdateBanner" wx:if="{{!loadingSetting}}">确认</view>
    <view class='list-item-btn' style="color: #4fd69c;" wx:else>设置中...</view>
    <view class='list-item-btn' bindtap="closeDialog" style="border-bottom: none;">取消</view>
  </view>
</dialog>